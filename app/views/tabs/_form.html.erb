<%= form_for(@tab) do |f| %>
  <% if @tab.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tab.errors.count, "error") %> prohibited this tab from being saved:</h2>

      <ul>
      <% @tab.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<p>
		<%= f.label :slug %>
		<%= f.text_field :slug%>
	</p>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :page %>
		<%= f.collection_select :page, Page.all, :id, :title, :prompt => true %>
	</p>
	<p>
		<%= f.label :param_string%>
		<%= f.text_field :param_string %>
	</p>
	<p>
		<%= f.label :ref_url %>
		<%= f.text_field :ref_url %>
	</p>
	<p>
		<%= f.label :open_in_new_window %>
		<%= f.check_box :open_in_new_window %>
	</p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
