<%= form_for(@tab) do |f| %>
  <% if @tab.errors.any? %>
    <div id="error_explanation" class="error">
      <h2><%= pluralize(@tab.errors.count, "error") %> prohibited this tab from being saved:</h2>
      <ul>
        <% @tab.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <fieldset>
    <legend>
      Main
    </legend>
    <p>
      <%= f.label :slug %>
      <%= f.text_field :slug%>
    </p>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>
  </fieldset>
  <fieldset>
    <legend>
      Attributes
    </legend>
    <p>
      <%= f.label :page %>
      <%= f.collection_select :page, Page.all, :id, :title, :prompt => true %>
    </p>
    <p>
      <%= f.label :parent %>
      <%= f.collection_select :parent, Tab.all - [@tab], :id, :name, :prompt => true %>
    </p>
    <p>
      <%= f.label :param_string%>
      <%= f.text_field :param_string %>
    </p>
    <p>
      <%= f.label :ref_url %>
      <%= f.text_field :ref_url %>
    </p>
    <p>
      <%= f.label :open_in_new_window %>
      <%= f.check_box :open_in_new_window %>
    </p>
  </fieldset>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
