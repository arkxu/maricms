{
  "sEcho": <%= params[:sEcho] || -1 %>,
  "iTotalRecords": <%= @total_records %>,
  "iTotalDisplayRecords": <%= @total_disp_records_size %>,
  "aaData": [
  <% @records.each_with_index do |rec,ind| %>
    <% indentation = '>' * rec.depth %>
    [
      "<%= ActiveSupport::JSON.encode (indentation + rec.slug) %>",
      "<%= ActiveSupport::JSON.encode rec.name unless rec.name.blank? %>",
      "<%= ActiveSupport::JSON.encode rec.parent.name if rec.parent %>",
      <% @d.ds_elements.each do |ds_element|%>
        <% if ds_element.ftype == "Text"%>
          "<%= ActiveSupport::JSON.encode truncate(rec.send(ds_element.key).gsub(/<\/?[^>]*>/, "")) %>",
        <% elsif ds_element.ftype == "Image" %>
          "<%= (image_tag rec.send(ds_element.key).url(:small)).gsub(/\"/, "'") %>",
        <% elsif ds_element.ftype == "DateTime" %>
          "<%= rec.send(ds_element.key).strftime(@setting.date_format) if rec.send(ds_element.key) %>",
        <% else %>
          "<%= ActiveSupport::JSON.encode rec.send(ds_element.key) if rec.send(ds_element.key) %>",
        <% end %>
      <% end %>
      "<%= rec.position.to_i %>",
      "<%= (button_to "Up", move_up_ds_tab_path(rec, :d => @d.id)).gsub(/\"/, "'")%> <%= (button_to "Down", move_down_ds_tab_path(rec, :d => @d.id)).gsub(/\"/, "'") %>",
      "<%= (link_to "Show", ds_tab_path(rec, :d => @d.id)).gsub(/\"/, "'") %> <%= (link_to "Edit", edit_ds_tab_path(rec, :d => @d.id)).gsub(/\"/, "'") %> <%= (link_to "Destroy", ds_tab_path(rec, :d => @d.id), :confirm => 'Are you sure?', :method => :delete).gsub(/\"/, "'")  %>"    
    ]
    <% if ind < @records.size - 1%>
    ,
    <% end %>
  <% end %>
  ]
}