  	<%= text_field_tag "setting[image_style][]", @setting.image_style.nil? ? "" : @setting.image_style[i]%>
  	<br/>
  <% end%>
</p> -->

<p>
	<%= f.label "Image Style[Original]" %>
	<%= text_field_tag "setting[image_style][original]", @setting.image_style.nil? ? "" : @setting.image_style["original"].to_s %>
</p>

<p>
	<%= f.label "Image Style[Large]" %>
	<%= text_field_tag "setting[image_style][large]", @setting.image_style.nil? ? "" : @setting.image_style["large"].to_s %>
</p>

<p>
	<%= f.label "Image Style[Medium]" %>
	<%= text_field_tag "setting[image_style][medium]", @setting.image_style.nil? ? "" : @setting.image_style["medium"].to_s %>
</p>

<p>
	<%= f.label "Image Style[Small]" %>
	<%= text_field_tag "setting[image_style][small]", @setting.image_style.nil? ? "" : @setting.image_style["small"].to_s %>
</p>

<p>
  <%= f.label :date_format %>
  <%= f.collection_select :date_format, Setting::DATE_FORMATS.collect {|f| [Date.today.strftime(f), f]}, :last, :first %>
</p>
<p>
  <%= f.label :time_format %>
  <%= f.collection_select :time_format, Setting::TIME_FORMATS.collect {|f| [Time.now.strftime(f), f]}, :last, :first %>
</p>
<p>
  <%= f.label :attachment_max_size %>
  <%= f.text_field :attachment_max_size %>
</p>
<p>
  <%= f.label :host_name %>
  <%= f.text_field :host_name %>
</p>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>

<%= link_to "Reset all to default", "/setting/reset", :method => :post, :confirm => "Are you sure? All the config will be removed and reset!" %>

